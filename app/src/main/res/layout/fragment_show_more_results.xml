<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/results_header_layout_height"
        android:orientation="vertical"
        android:background="@color/blue_header"
        android:paddingLeft="@dimen/moreResults_header_layout_paddingLeft"
        android:elevation="@dimen/results_header_layout_elevation">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/showSongTitle"
            android:textSize="@dimen/moreResults_header_text_textSize"
            android:singleLine="true"
            android:gravity="fill_vertical|start" />

    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/showMoreResultListView"/>

</LinearLayout>