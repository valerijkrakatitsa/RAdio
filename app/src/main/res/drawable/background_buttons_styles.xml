<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#dad6d7"
                android:startColor="#eaecec"/>

            <stroke
                android:width="1dp"
                android:color="#cacaca"/>
        </shape>
    </item>

    <item >
        <shape>
            <gradient
                android:angle = "270"
                android:endColor="#d6dada"
                android:startColor="#eaecec"/>


        </shape>
    </item>

</selector>